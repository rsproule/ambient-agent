// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id                   String    @id @default(cuid())
  conversationId       String    @unique // phone number or group_id
  isGroup              Boolean   @default(false)
  groupName            String? // Optional: Group name
  participants         String[] // Array of phone numbers/emails for group participants
  summary              String?   @db.Text // Optional: compressed context summary for future use
  lastMessageAt        DateTime  @updatedAt
  createdAt            DateTime  @default(now())
  activeResponseTaskId String? // Task ID currently sending messages
  interruptRequested   Boolean   @default(false) // Signal to stop current response
  messages             Message[]

  @@index([conversationId])
  @@index([lastMessageAt])
}

model Message {
  id              String       @id @default(cuid())
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role            String // "user", "assistant", or "system"
  content         Json // Support both string and structured content (for tool calls)
  sender          String? // phone number for user messages or source for system messages
  messageId       String? // LoopMessage message_id
  attachments     String[] // Array of attachment URLs
  forwarded       Boolean? // For system messages: whether it was forwarded to the user
  rejectionReason String?      @db.Text // For system messages: why it wasn't forwarded (if applicable)
  createdAt       DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model User {
  id          String   @id @default(cuid())
  phoneNumber String?  @unique // Optional: Phone number for DMs (1-1 mapping). Null for web-only users (merchants)
  name        String? // Optional display name
  email       String? // Optional email
  metadata    Json? // Optional additional user metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([phoneNumber])
}

enum MessageStatus {
  pending
  processing
  completed
  failed
}

model QueuedMessage {
  id           String              @id @default(cuid())
  target       Json // Discriminated union: { type: 'user_id', userId: string } | { type: 'global' } | { type: 'segment', segmentId: string }
  source       String // Identifier for the user/merchant sending the message
  bribePayload Json? // Optional payment metadata
  payload      Json // Generic message payload
  status       MessageStatus       @default(pending)
  processedAt  DateTime?
  error        String?             @db.Text
  createdAt    DateTime            @default(now())
  evaluations  MessageEvaluation[]

  @@index([status, createdAt])
}

model PrioritizationConfig {
  id                 String   @id @default(cuid())
  conversationId     String   @unique // Links to Conversation.conversationId (phone number or group_id)
  minimumNotifyPrice Decimal  @default(0) @db.Decimal(10, 2) // Dollar threshold for delivery
  customValuePrompt  String?  @db.Text // Optional: User's custom AI prompt for value calculation
  isEnabled          Boolean  @default(true) // Allow disabling prioritization
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([conversationId])
}

model MessageEvaluation {
  id               String        @id @default(cuid())
  queuedMessageId  String // Link to QueuedMessage
  queuedMessage    QueuedMessage @relation(fields: [queuedMessageId], references: [id], onDelete: Cascade)
  conversationId   String // Which conversation this was evaluated for
  baseValue        Decimal       @db.Decimal(10, 2) // AI-calculated value
  bribeAmount      Decimal       @default(0) @db.Decimal(10, 2) // From bribePayload
  totalValue       Decimal       @db.Decimal(10, 2) // baseValue + bribeAmount
  passed           Boolean // Whether it passed the threshold
  evaluationReason String        @db.Text // AI's explanation
  evaluatedAt      DateTime      @default(now())

  @@index([queuedMessageId])
  @@index([conversationId, evaluatedAt])
}
