// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id                   String    @id @default(cuid())
  conversationId       String    @unique // phone number or group_id
  isGroup              Boolean   @default(false)
  groupName            String? // Optional: Group name
  participants         String[] // Array of phone numbers/emails for group participants
  summary              String?   @db.Text // Optional: compressed context summary for future use
  lastMessageAt        DateTime  @updatedAt
  createdAt            DateTime  @default(now())
  activeResponseTaskId String? // Task ID currently sending messages
  interruptRequested   Boolean   @default(false) // Signal to stop current response
  messages             Message[]

  @@index([conversationId])
  @@index([lastMessageAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" or "assistant"
  content        String       @db.Text
  sender         String? // phone number for user messages
  messageId      String? // LoopMessage message_id
  attachments    String[] // Array of attachment URLs
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model User {
  id          String   @id @default(cuid())
  phoneNumber String?  @unique // Optional: Phone number for DMs (1-1 mapping). Null for web-only users (merchants)
  name        String? // Optional display name
  email       String? // Optional email
  metadata    Json? // Optional additional user metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([phoneNumber])
}

enum MessageStatus {
  pending
  processing
  completed
  failed
}

model QueuedMessage {
  id           String        @id @default(cuid())
  target       Json // Discriminated union: { type: 'user_id', userId: string } | { type: 'global' } | { type: 'segment', segmentId: string }
  source       String // Identifier for the user/merchant sending the message
  bribePayload Json? // Optional payment metadata
  payload      Json // Generic message payload
  status       MessageStatus @default(pending)
  processedAt  DateTime?
  error        String?       @db.Text
  createdAt    DateTime      @default(now())

  @@index([status, createdAt])
}
