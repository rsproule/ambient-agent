// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

model Conversation {
  id                   String    @id @default(cuid())
  conversationId       String    @unique // phone number or group_id
  isGroup              Boolean   @default(false)
  groupName            String? // Optional: Group name
  participants         String[] // Array of phone numbers/emails for group participants
  summary              String?   @db.Text // Optional: compressed context summary for future use
  lastMessageAt        DateTime  @updatedAt
  createdAt            DateTime  @default(now())
  activeResponseTaskId String? // Task ID currently sending messages
  interruptRequested   Boolean   @default(false) // Signal to stop current response
  lockAcquiredAt       DateTime? // When the current lock was acquired (for timeout detection)
  senderLocks          Json? // For group chats: { "sender": { "taskId": "...", "lockedAt": "ISO" } }
  currentApp           String? // Active app ID (e.g., "negotiation"), null = default
  messages             Message[]

  @@index([conversationId])
  @@index([lastMessageAt])
}

enum DeliveryStatus {
  pending
  scheduled
  sent
  failed
  timeout
}

model Message {
  id              String          @id @default(cuid())
  conversationId  String
  conversation    Conversation    @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role            String // "user", "assistant", or "system"
  content         Json // Support both string and structured content (for tool calls)
  sender          String? // phone number for user messages or source for system messages
  messageId       String? // LoopMessage message_id
  attachments     String[] // Array of attachment URLs
  forwarded       Boolean? // For system messages: whether it was forwarded to the user
  rejectionReason String?         @db.Text // For system messages: why it wasn't forwarded (if applicable)
  deliveryStatus  DeliveryStatus? // For assistant messages: pending -> sent/failed/timeout
  deliveryError   String? // Error message if delivery failed
  createdAt       DateTime        @default(now())

  @@index([conversationId, createdAt])
  @@index([messageId])
}

model User {
  id                     String         @id @default(cuid())
  phoneNumber            String?        @unique // Optional: Phone number for DMs (1-1 mapping). Null for web-only users (merchants)
  name                   String? // Optional display name
  email                  String?        @unique // Optional email
  emailVerified          DateTime? // For NextAuth
  image                  String? // Profile image URL
  isAdmin                Boolean        @default(false) // Admin access for admin routes
  outboundOptIn          Boolean? // null = not asked, true = opted in, false = opted out
  hasCompletedOnboarding Boolean        @default(false) // Whether user has completed the onboarding flow
  connections            Connection[] // User's connected accounts
  accounts               Account[] // OAuth accounts
  sessions               Session[] // User sessions
  userContext            UserContext? // Research-based context
  scheduledJobs          ScheduledJob[] // User's scheduled jobs
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt

  @@index([phoneNumber])
  @@index([email])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum MessageStatus {
  pending
  processing
  completed
  failed
}

model QueuedMessage {
  id           String              @id @default(cuid())
  target       Json // Discriminated union: { type: 'user_id', userId: string } | { type: 'global' } | { type: 'segment', segmentId: string }
  source       String // Identifier for the user/merchant sending the message
  bribePayload Json? // Optional payment metadata
  payload      Json // Generic message payload
  status       MessageStatus       @default(pending)
  processedAt  DateTime?
  error        String?             @db.Text
  createdAt    DateTime            @default(now())
  evaluations  MessageEvaluation[]

  @@index([status, createdAt])
}

model PrioritizationConfig {
  id                 String   @id @default(cuid())
  conversationId     String   @unique // Links to Conversation.conversationId (phone number or group_id)
  minimumNotifyPrice Decimal  @default(0) @db.Decimal(10, 2) // Dollar threshold for delivery
  customValuePrompt  String?  @db.Text // Optional: User's custom AI prompt for value calculation
  isEnabled          Boolean  @default(true) // Allow disabling prioritization
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([conversationId])
}

model MessageEvaluation {
  id               String        @id @default(cuid())
  queuedMessageId  String // Link to QueuedMessage
  queuedMessage    QueuedMessage @relation(fields: [queuedMessageId], references: [id], onDelete: Cascade)
  conversationId   String // Which conversation this was evaluated for
  baseValue        Decimal       @db.Decimal(10, 2) // AI-calculated value
  bribeAmount      Decimal       @default(0) @db.Decimal(10, 2) // From bribePayload
  totalValue       Decimal       @db.Decimal(10, 2) // baseValue + bribeAmount
  passed           Boolean // Whether it passed the threshold
  evaluationReason String        @db.Text // AI's explanation
  evaluatedAt      DateTime      @default(now())

  @@index([queuedMessageId])
  @@index([conversationId, evaluatedAt])
}

enum ConnectionProvider {
  google_gmail
  google_calendar
  github
}

enum ConnectionStatus {
  connected
  disconnected
  error
}

model Connection {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider     ConnectionProvider
  status       ConnectionStatus   @default(disconnected)
  accountEmail String? // Email/username of the connected account
  accountId    String? // Provider's account ID

  // Pipedream specific fields
  pipedreamAccountId String? // Pipedream's connected account ID
  accessToken        String?   @db.Text // Encrypted access token
  refreshToken       String?   @db.Text // Encrypted refresh token
  expiresAt          DateTime? // Token expiration

  scopes       String[] // Granted permissions
  metadata     Json? // Additional provider-specific data
  lastSyncedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, provider])
  @@index([userId])
  @@index([status])
}

// ============================================
// Research Job System
// ============================================

enum ResearchJobStatus {
  pending
  running
  completed
  failed
}

// Generic research job tracking
model ResearchJob {
  id            String  @id @default(cuid())
  targetType    String // "user", "conversation"
  targetId      String // userId or conversationId
  triggerType   String // "oauth", "conversation", "manual", "scheduled"
  triggerSource String? // Provider name, message context, etc.
  triggerMeta   Json?

  tasks       Json // ResearchTask[]
  postProcess Json? // { notify, notifyOnlyIfSignificant }

  status ResearchJobStatus @default(pending)
  result Json? // Final output/summary
  error  String?           @db.Text

  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())

  @@index([targetType, targetId])
  @@index([status])
}

// User context storage (research results live here)
model UserContext {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // User preferences
  timezone String? // e.g. "America/Los_Angeles" - inferred from calendar or set by user

  // Proactive messaging settings - per-hook tracking
  // JSON object: { "calendar": "2024-01-01T00:00:00Z", "github": "...", ... }
  hookLastRunTimes Json? // When each hook last ran
  // JSON object: { "calendar": 15, "github": 60, "gmail": 120, ... } (minutes)
  hookCooldowns    Json? // Per-hook cooldown overrides (optional)

  // Structured findings
  summary      String?  @db.Text // AI-generated summary
  facts        Json? // Key facts array
  interests    String[] // Detected interests/topics
  professional Json? // Work info (company, role, projects)

  documents ContextDocument[]

  lastUpdatedAt DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([userId])
}

// Vector-searchable documents
model ContextDocument {
  id        String      @id @default(cuid())
  contextId String
  context   UserContext @relation(fields: [contextId], references: [id], onDelete: Cascade)

  source    String // "gmail", "github", "calendar", "web", "conversation"
  sourceUrl String? // Original URL if applicable
  title     String
  content   String                       @db.Text
  embedding Unsupported("vector(1536)")? // OpenAI embedding dimension
  isStale   Boolean                      @default(false)

  createdAt DateTime @default(now())

  @@index([contextId])
}

// ============================================
// Scheduled Jobs (User-defined fuzzy jobs)
// ============================================

enum ScheduledJobNotifyMode {
  always // Always notify user of results
  significant // Only notify if results are significant/interesting
}

model ScheduledJob {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Conversation context - where the job was created and should run
  conversationId String // Phone number (DM) or group_id (group chat)
  isGroup        Boolean @default(false) // Whether this was created in a group chat

  name         String // Human-readable name, e.g. "AI news check"
  prompt       String  @db.Text // The prompt to run, e.g. "Search for news about AI dev tools"
  cronSchedule String // Cron expression, e.g. "0 8 * * *" (parsed from natural language by LLM)
  timezone     String? // User's timezone for schedule interpretation

  notifyMode ScheduledJobNotifyMode @default(significant)
  enabled    Boolean                @default(true)

  lastRunAt  DateTime? // When this job last ran
  nextRunAt  DateTime? // When this job should next run
  lastResult Json? // Store last run result for deduplication

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([enabled, nextRunAt])
  @@index([conversationId])
}

// ============================================
// Group Chat Settings
// ============================================

model GroupChatSettings {
  id             String @id @default(cuid())
  conversationId String @unique // Links to Conversation.conversationId (group_id)

  // Custom behavior prompt - injected into system prompt for this group
  // Users can describe how they want the AI to behave via natural language
  customPrompt String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([conversationId])
}

// ============================================
// Feature Requests
// ============================================

model FeatureRequest {
  id          String  @id @default(cuid())
  description String  @db.Text // What the user requested
  phoneNumber String? // Who requested it (optional - may be from group)
  userName    String? // Name if known
  context     String? @db.Text // Optional context about how/why they requested it

  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([phoneNumber])
}

// ============================================
// Event Log (append-only)
// ============================================

model Event {
  id             String   @id @default(cuid())
  conversationId String?
  userId         String?

  type    String // message_in, message_out, app_launch, app_exit, app_event, tool_call, system, error
  source  String // user, assistant, app:negotiation, system, webhook
  payload Json

  createdAt DateTime @default(now())

  @@index([conversationId, createdAt])
  @@index([userId, createdAt])
  @@index([type, createdAt])
}

// ============================================
// Negotiation App State
// ============================================

model NegotiationApp {
  id             String @id @default(cuid())
  conversationId String @unique
  userId         String

  currentQuote   Decimal? @db.Decimal(10, 2)
  researchNotes  String?  @db.Text
  status         String   @default("researching") // researching, negotiating, agreed, completed

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([conversationId])
  @@index([userId])
}
